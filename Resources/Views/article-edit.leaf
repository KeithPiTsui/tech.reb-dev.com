<!DOCTYPE html>
<html>

<head>
  <title>Edit</title>
  #embed("embeds/resource")
</head>

<body>
  #embed("logined-header")

  <div class="content">
    #loop(articles, "article") {
      <div class="card">
        <div class="card-block">
          <h3 class="card-title">#(article.title)</h3>
          <a href="/update/#(article.id)" class="btn btn-default">記事を編集する</a>
        </div>

        <div class="card-footer text-muted">
          #(article.created_at)
        </div>
      </div>
    }

    <div id="footer-content">

      #if(has_previous) {
        <a class="btn btn-default footer-left" href="/edit/#(previous)" role="button">前のページ</a>
      }

      #if(has_next) {
        <a class="btn btn-default footer-right" href="/edit/#(next)" role="button">次のページ</a>
      }

    </div>
    <div class="clearbox"></div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</body>

</html>
