<!DOCTYPE html>
<html>

<head>
  <title>#(sitename)</title>
  #embed("embeds/resource")
</head>

<body>
  #embed("content-header")

  <div class="content">
    #loop(articles, "article") {
      <div class="card">
        <div class="card-block">
          <a href="/articles/#(article.id)"><h3 class="card-title">#(article.title)</h3></a>
        </div>

        <div class="card-footer text-muted">
          #(article.createdAt)
        </div>
      </div>
    }

    <div id="footer-content">

      #if(has_previous) {
        <a class="btn btn-default footer-left" href="/?page=#(previous)" role="button">前のページ</a>
      }

      #if(has_next) {
        <a class="btn btn-default footer-right" href="/?page=#(next)" role="button">次のページ</a>
      }

    </div>
    <div class="clearbox"></div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</body>

</html>
