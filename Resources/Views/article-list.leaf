<!DOCTYPE html>
<html>

<head>
  <title>List</title>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/styles/card.css" rel="stylesheet">

  #embed("include-header")
</head>

<body>
  #embed("content-header")

  <div class="content">
    #loop(articles, "article") {
      <div class="card">
        <div class="card-block">
          <h3 class="card-title">#(article.title)</h3>
          <p class="card-text">#(article.part_of_content)</p>
          <a href="/contents/#(article.id)" class="btn btn-default">もっと見る</a>
        </div>

        <div class="card-footer text-muted">
          #(article.created_at)
        </div>
      </div>
    }

    <div id="footer-content">

      #if(has_previous) {
        <a class="btn btn-default footer-left" href="/articles/page/#(previous)" role="button">前のページ</a>
      }

      #if(has_next) {
        <a class="btn btn-default footer-right" href="/articles/page/#(next)" role="button">次のページ</a>
      }

    </div>
    <div class="clearbox"></div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</body>

</html>
