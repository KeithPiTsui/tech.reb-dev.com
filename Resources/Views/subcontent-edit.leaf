<!DOCTYPE html>
<html>

<head>
  <title>SubContent-Edit</title>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/styles/card.css" rel="stylesheet">
  
  #embed("include-header")
</head>

<body>
  #embed("header")

  <div class="content">

    <a class="btn btn-default" href="/new-subcontent">コンテンツを追加</a>

    #loop(subcontents, "subcontent") {
      <div class="card">
        <div class="card-block">
          <h3 class="card-title">#(subcontent.name)</h3>
          <p class="card-text">#(subcontent.part_of_content)</p>
          <a href="/update-subcontent?id=#(subcontent.id)" class="btn btn-default">編集する</a>
        </div>
      </div>
    }

    <div class="clearbox"></div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</body>

</html>
