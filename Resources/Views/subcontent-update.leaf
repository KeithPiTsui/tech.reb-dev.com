<!DOCTYPE html>
<html>

<head>
  <title>UpdateSubContent</title>
  #embed("embeds/resource")
</head>

<body>
  #embed("logined-header")

  <div class="content right">
    <div class="register-form">
      <form action="/subcontents/update/#(id)" method="post">
        <input type="hidden" name="authenticity_token" value="#(authenticity_token)">
        <input type="hidden" name="id" value="#(id)">

        <h1>サブコンテンツを更新する</h1>
        <div class="error-message">#(error_message)</div>
        <div class="success-message">#(success_message)</div>
        <br>
        <br>

        <div class="row">
          <div class="col-sm-2">タイトル</div>
          <div class="col-sm-10 form-inline" style="padding: 3px;">
            <input type="text" class="form-control input-sm" value="#(name)" name="name" placeholder="名前" size="30">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">内容</div>
          <div class="col-sm-10" style="padding: 3px;">
            <textarea class="form-control input-sm" rows="20" name="content" placeholder="内容">#raw(content)</textarea>
          </div>
        </div>

        <button type="submit" id="register-btn" class="btn btn-default" name="action">更新する</button>

      </div>
    </div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</body>
</html>
