<!DOCTYPE html>
<html>
<head>
  <title>UpdateSubContent</title>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  #embed("include-header")
</head>

<body>
  #embed("header")

  <div class="content right">
    <div class="container">
      <div class="register-form">
        <form action="/update-subcontent" method="post">

          <input type="hidden" name="id" value="#(id)">
          <h1>サブコンテンツを更新する</h1>
          <div class="error-message">#(error_message)</div>
          <div class="success-message">#(success_message)</div>
          <br>
          <br>

          <div class="row">
            <div class="col-sm-2">タイトル</div>
            <div class="col-sm-10 form-inline" style="padding: 3px;">
              <input type="text" class="form-control input-sm" value="#(name)" name="name" placeholder="名前" size="30">
            </div>
          </div>

            <div class="row">
              <div class="col-sm-2">内容</div>
              <div class="col-sm-10" style="padding: 3px;">
                <textarea class="form-control input-sm" rows="20" name="content" placeholder="内容">#(content)</textarea>
              </div>
            </div>

            <button type="submit" id="register-btn" class="btn btn-default" name="action">更新する</button>
            
          </div>
        </div>
      </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  </body>
  </html>
